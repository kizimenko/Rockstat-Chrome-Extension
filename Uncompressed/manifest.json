{
	"manifest_version": 3,
	"name": "Rockstat",
	"description": "Rockstat позволяет визуально отслеживать запросы t4k, не открывая консоль chrome",
	"version": "2.1.1",
	"homepage_url": "https://github.com/kizimenko/Rockstat-Chrome-Extension",
	"permissions": [
		"webRequest",
		"storage",
		"tabs",
		"cookies",
		"alarms"
	  ],
	"host_permissions": [
		"<all_urls>"
	  ],
	"action": {
	  "default_popup": "popup.html"
	},

	"background": {
	  "service_worker": "background.js"
	},
	"icons": {
	  "128": "images/icon128.png"
	}
  }